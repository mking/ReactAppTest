{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:import/recommended"
  ],
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "babel-module": {
        "alias": {
          "@app/src": "src"
        }
      }
    }
  },
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "import/no-unresolved": [2, { "ignore": ["\\.(css|jpg|png|svg)$"] }],
    "import/no-named-as-default-member": 0,
    "react/prop-types": 0
  }
}